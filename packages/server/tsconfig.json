{
  "compilerOptions": {
    // Keep your existing settings but add/modify these:
    "noEmit": false, // Enable emission of files
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate sourcemaps for .d.ts
    "allowImportingTsExtensions": false, // Disable this for package development
    "moduleResolution": "node", // Use Node resolution for better package compatibility
    "outDir": "./dist", // Specify output directory
    "emitDeclarationOnly": true, // Only emit declaration files

    // Rest of your existing config...
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // Add include/exclude to control which files get processed
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
